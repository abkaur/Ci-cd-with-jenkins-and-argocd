pipeline {
  agent any // ✅ Runs on any available Jenkins agent

  environment {
    DOCKER_IMAGE = "abkaur95/jenkins-cicd:${BUILD_NUMBER}" // ✅ Your correct DockerHub repo
    REGISTRY_CREDENTIALS = credentials('dockerhub')
    GIT_REPO_NAME = "Ci-cd-with-jenkins-and-argocd"
    GIT_USER_NAME = "abkaur"
  }

  stages {
    
    stage('Checkout') {
      steps {
        sh 'echo "Checking out repository..."'
        git branch: 'main', url: 'https://github.com/abkaur/Ci-cd-with-jenkins-and-argocd.git' // ✅ Using your forked repo
        sh 'ls -la' // ✅ Confirm Jenkinsfile exists
      }
    }

    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh '''
        if [ -d "spring-boot-app" ]; then
          cd spring-boot-app && mvn clean package
        else
          echo "Directory spring-boot-app not found!"
          exit 1
        fi
        '''
      }
    }

    stage('Build and Push Docker Image') {
      steps {
        script {
          sh 'cd spring-boot-app && docker build -t ${DOCKER_IMAGE} .' // ✅ Ensure correct directory
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', "dockerhub") {
              dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'git-hub-token', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "kaurab@sheridancollege.ca"
            git config user.name "abkaur"
            BUILD_NUMBER=${BUILD_NUMBER}
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" spring-boot-app-manifests/deployment.yml
            git add spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }

  } // End of stages
} // End of pipeline




